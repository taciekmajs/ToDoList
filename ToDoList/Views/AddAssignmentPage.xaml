<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Views.AddAssignmentPage"
             Title="Add Assignment">
    <VerticalStackLayout Padding="10" Spacing="10">

        <Label Text="Assignment title:" FontSize="16" />
        <Entry x:Name="AssignmentName" Placeholder="Enter title" />

        <Label Text="Assignment details (optional)" FontSize="16" />
        <Editor x:Name="AssignmentDetails" AutoSize="TextChanges" Placeholder="Enter details" />

        <Button x:Name="btnAddAssignment" Clicked="btnAddAssignment_Clicked" Text="Add Assignment"/>

    </VerticalStackLayout>
</ContentPage>